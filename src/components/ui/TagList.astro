---
export interface Props {
  tags: string[];
}
const { tags } = Astro.props;
---
{tags && tags.length > 0 && (
  <ul class="flex flex-wrap gap-2 mt-2">
    {tags.map(tag => (
      <li class="inline-block px-3 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full font-sans">{tag}</li>
    ))}
  </ul>
)} 