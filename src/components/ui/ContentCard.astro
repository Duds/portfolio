---
export interface Props {
  title: string;
  description: string;
  link: string;
}
const { title, description, link } = Astro.props;
---
<article class="border rounded-xl p-6 shadow hover:shadow-lg transition bg-white flex flex-col gap-3">
  <h2 class="text-xl font-semibold mb-1 text-blue-800">
    <a href={link} class="hover:underline">{title}</a>
  </h2>
  <p class="text-neutral-700 mb-2">{description}</p>
  <a href={link} class="inline-block mt-auto px-4 py-2 rounded bg-blue-600 text-white font-semibold hover:bg-blue-700 transition text-sm">Read more</a>
</article> 