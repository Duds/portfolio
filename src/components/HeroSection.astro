---
import Button from './ui/Button.astro';
import Avatar from './ui/Avatar.astro';
export interface Props {}
---
<!-- HERO SECTION - Single centred column with avatar above hero copy -->
<section class="h-[60vh] flex items-center py-section px-6 rounded-b-[6rem]" style="background-color: #D9D8D7;">
  <div class="max-w-2xl mx-auto w-full flex flex-col items-center justify-center relative z-0">
    <div class="flex flex-col items-center w-full">
      <div class="mb-6"><Avatar size={96} initials="DR" alt="Dale Rogers avatar placeholder" /></div>
      <p class="text-4xl md:text-7xl font-extrabold leading-tight text-center" style="color: #262626;">
        Hi, I'm Dale
      </p>
      <p class="mt-8 text-xl md:text-2xl font-normal text-center" style="color: #262626;">
        I help organisations design safer, more inclusive services using systems thinking and co-design for real, lasting impact.
      </p>
      {/* TODO: Introduce A/B testing for the button copy (e.g., "Letâ€™s Work Together" vs. "Start Your Project") */}
      <Button href="/contact" label="Start your project" variant="hero" class="mt-10 w-max rainbow-sparkle-btn" />
    </div>
  </div>
</section> 