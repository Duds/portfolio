---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import ContentCard from '../components/ui/ContentCard.astro';

const featuredContent = [
  {
    title: 'The Ethics of Service Design',
    description: 'Navigating moral dilemmas and responsible decision-making in service design.',
    link: '/articles/the-ethics-of-service-design',
  },
  {
    title: 'Poka-Yoke in Service Design & User Experience',
    description: 'How error-proofing principles from manufacturing can transform service and digital experiences.',
    link: '/articles/poka-yoke-in-service-design-and-user-experience',
  },
  {
    title: 'How to Embed Continuous Improvement',
    description: 'Building a culture and process of continuous improvement for lasting impact.',
    link: '/articles/how-to-embed-continuous-improvement',
  },
  {
    title: 'Case Studies',
    description: 'Explore real-world projects that demonstrate strategic and ethical service design.',
    link: '/case-studies',
  },
];
---
<BaseLayout title="Service Design & Strategy" tags={["service design", "strategic design", "ethics", "continuous improvement", "error-proofing"]}>
  <Header />
  <main class="relative isolate min-h-[85vh] px-6 py-24 md:py-36 max-w-6xl mx-auto font-sans">
    <section class="text-left max-w-3xl mb-20 relative z-10">
      <h1 class="text-5xl md:text-6xl font-extrabold tracking-tight leading-tight mb-6 text-blue-900">
        Service Design & Strategic Design
      </h1>
      <p class="text-lg md:text-xl text-neutral-700 mb-8 max-w-prose">
        I help organisations create ethical, reliable, and continuously improving services that deliver real value to people. My approach blends human-centred design, operational excellence, and strategic change leadership.
      </p>
      <ul class="list-disc pl-6 mb-8 text-neutral-800">
        <li><strong>Ethics & Responsibility:</strong> Designing services that are not just effective, but also ethical, inclusive, and sustainable.</li>
        <li><strong>Error-Proofing & Reliability:</strong> Applying industrial-grade error-proofing to digital and service experiences for safer, more reliable outcomes.</li>
        <li><strong>Continuous Improvement:</strong> Building cultures of innovation and learningâ€”because the best services are always evolving.</li>
        <li><strong>Strategic Change:</strong> Helping organisations embed improvement and adapt to evolving challenges.</li>
      </ul>
      <a href="/contact" class="inline-block border border-blue-700 text-blue-700 hover:bg-blue-700 hover:text-white transition px-6 py-3 text-base font-semibold tracking-wide uppercase rounded shadow-sm">Work with me</a>
    </section>
    <section class="grid gap-8 md:grid-cols-2 relative z-10">
      {featuredContent.map(content => (
        <ContentCard {...content} />
      ))}
    </section>
  </main>
  <Footer />
</BaseLayout> 